            <property name="keyValue" type="String" default="Key Value" label="Enter Key Value"/>
            <property name="subText" type="String" default="Sub-text" label="Enter Sub-text"/>
            <property name="subText2" type="String" default="Sub-text2" label="Enter Sub-text2"/>
            <property name="variable1" type="String" default="variable1" label="Enter variable1"/>
            <property name="variable2" type="String" default="variable2" label="Enter variable2"/>
            <property name="variable3" type="String" default="variable3" label="Enter variable3"/>
            <property name="middleMessage" type="Boolean" label="Middle Message?"/>
            <property name="showNextPrevious" type="Boolean" label="Show Next Previous buttons" description="Show Next Previous buttons" />
